{% set base__class = 'weather-container '%}

<div {{ bem('block', [base__class]) }}>

  <div {{ bem('weather-image') }}>
    {% if weather_text == 'Clouds' %}
      {% include "@atoms/images/image/responsive-image.twig" with {
        image_src: directory ? '/' ~ directory ~ '/assets/images/cloudy.svg',
        image_alt: 'cloudy'|t,
      } %}
    {% endif %}

    {% if weather_text == 'Sunny' %}
      {% include "@atoms/images/image/responsive-image.twig" with {
        image_src: directory ? '/' ~ directory ~ '/assets/images/sunny.svg',
        image_alt: 'sunny'|t,
      } %}
    {% endif %}
  </div>

  <div {{ bem('weather-body') }}>
    {% include "@atoms/text/text/01-paragraph.twig" with {
      paragraph_base_class: 'weather_text',
      paragraph_content: weather_text
    } %}

    <div {{ bem('weather-body__temp') }}>
      {% include "@atoms/text/text/01-paragraph.twig" with {
        paragraph_base_class: 'weather_temp',
        paragraph_content: temp
      } %}

      {% include "@atoms/text/text/01-paragraph.twig" with {
        paragraph_base_class: 'weather_feels',
        paragraph_content: feels_like
      } %}
    </div>

  </div>

</div>
