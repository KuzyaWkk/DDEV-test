{% set fonts_base_class = "cl-fonts" %}

<div {{ bem(colors_base_class) }}>
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: 2,
    heading: fonts_heading,
  } %}


  {% for family in families %}
    {% set family_machine = family.family_heading|lower %}
    {% include "@atoms/text/headings/_heading.twig" with {
      heading_level: 3,
      heading: palette.palette_heading,
    } %}
    <div class="">  {% include "@atoms/text/headings/_heading.twig" with {
        heading_level: 4,
        heading: family.family_heading,
      } %}</div>
    <ul {{ bem('list', [family_machine], fonts_base_class) }} data-theme="{{ family_machine }}">
      {% for font in family.fonts %}
        {% set font_machine = font.name|lower|replace({' ': '-'}) %}

        <li {{ bem("item", [family_machine ~ '-' ~ font_machine], fonts_base_class) }}>
          <span {{ bem("title", fonts_title_modifiers, fonts_base_class) }}>{{ font.name }}</span> <br/>
        </li>
      {% endfor %}
    </ul>
  {% endfor %}
</div>
