{#
/**
 * @file
 * Theme override for a views mini-pager.
 *
 * Available variables:
 * - heading_id: Pagination heading ID.
 * - items: List of pager items.
 *
 * @see template_preprocess_views_mini_pager()
 */
#}

{% set previous_page = items.current - 1%}
{% set next_page = items.current + 1%}

{% if items.previous or items.next %}
  <nav role="navigation" aria-labelledby="{{ heading_id }}">
    <h4 id="{{ heading_id }}" class="visually-hidden">{{ 'Pagination'|t }}</h4>
    <ul class="js-pager__items">
      {% if items.previous %}
        <a {{ bem('pager-item', ['previous', 'icon']) }} href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
          <span aria-hidden="true">{{ items.previous.text|default('‹‹'|t) }}</span>
        </a>
        <a {{ bem('pager-item', ['previous']) }} href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
          {% trans %}
            {{ previous_page }}
          {% endtrans %}
        </a>
      {% endif %}
      {% if items.current %}

          <span {{ bem('pager-item', ['current']) }}>
            {% trans %}
              {{ items.current }}
            {% endtrans %}
          </span>


      {% endif %}
      {% if items.next %}
        <a {{ bem('pager-item', ['next']) }} href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
          {% trans %}
            {{ next_page }}
          {% endtrans %}
        </a>
        <a {{ bem('pager-item', ['next', 'icon']) }}href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
          <span aria-hidden="true">{{ items.next.text|default('››'|t) }}</span>
        </a>
      {% endif %}
    </ul>
  </nav>
{% endif %}
